<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="uz.pl.quizuz.GameMenu">

    <Button
        android:id="@+id/playButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/playButtonText" />

    <Button
        android:id="@+id/randomcatButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/randomCategoryButtonText" />

    <Button
        android:id="@+id/categoriesButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/categoriesButtonText" />

    <Button
        android:id="@+id/statsButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/statsButtonText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/authorsButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/authorsButtonText" />

        <Button
            android:id="@+id/helpButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/helpButtonText" />
    </LinearLayout>
</LinearLayout>
